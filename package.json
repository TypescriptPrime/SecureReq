{
  "name": "@typescriptprime/securereq",
  "type": "module",
  "version": "0.0.0",
  "description": "SecureReq is a lightweight utility for making secure HTTP requests, implemented in TypeScript",
  "keywords": [
    "https",
    "helper",
    "utilities",
    "http",
    "tls"
  ],
  "scripts": {
    "build": "tsc -p sources/tsconfig.json",
    "lint": "eslint",
    "test": "ava"
  },
  "exports": {
    ".": {
      "node": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "license": "Apache-2.0",
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "nodeArguments": [
      "--import=tsx"
    ],
    "workerThreads": false,
    "typescript": {
      "rewritePaths": {
        "@/": "./sources/"
      },
      "compile": false
    }
  },
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TypescriptPrime/SecureReq.git"
  },
  "devDependencies": {
    "@ava/typescript": "^6.0.0",
    "@types/node": "^24.11.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "ava": "^7.0.0",
    "eslint": "^10.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
