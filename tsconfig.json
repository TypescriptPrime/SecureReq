{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2024",
    "moduleResolution": "NodeNext",
    "removeComments": false,
    "alwaysStrict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./sources/*"]
    }
  },
  "include": [
    "sources/**/*.ts",
    "tests/**/*.test.ts",
    "builder.ts"
  ]
}